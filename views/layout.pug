doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='/stylesheets/login.css')
    title MixTape - #{title}
  body
    nav(class='navigation-bar')
      a(class='navbar-brand' href='/') MixTape 
      button(class='navbar-toggler' type='button' data-toggle='collapse' data-target='#navbarText' aria-controls='navbarText' aria-expanded='false' aria-label='Toggle navigation')
        span(class='navbar-toggler-icon')
      div(class='collapse navbar-collapse' id='navbarText')
        ul(class='navbar-nav mr-auto')
        if locals.authenticated
          span(class='navbar-text px-4') Welcome #{user.firstName}!
          form(class='form-inline pr-4' action='/logout' method='post')
            button(class='btn btn-sm btn-warning' type='submit') Logout
        else
          span(class='navbar-text px-4')
            a(class='btn btn-sm btn-dark mr-2' href='/login') Login
            a(class='btn btn-sm btn-dark' href='/register') Register
    div(class='container')
      h2(class='information') #{title}
      block content

