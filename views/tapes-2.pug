extends layout.pug
include utils.pug
block content
    div(class='tapes2')
        div(class='update')
        h1(class='tape2Title') Saved songs in your #{tape.tapeName}
        form(class='newtapes' action=`/users/${user.id}/tapes/${tape.id}` method='post')
            input(type='hidden' name='_csrf' value=csrfToken)
            input(type='text' name='tapeName' value=tapeName id='tapeName')
            div(class='create-cancel-btn')
                button(type='submit' class='button-21') Update your tape name here!
        div
            h2 Check your songs
        div(class="allSongLinks")
            each playlist in playlists 
                a(href=`/songs/${playlist.Song.id}`)
                    img(class="allSongImages" src=playlist.Song.songImg)
                    p #{playlist.Song.name}