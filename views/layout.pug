doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='/stylesheets/layout-nav.css')
    link(rel='stylesheet' href='/stylesheets/register.css')
    link(rel='stylesheet' href='/stylesheets/song.css')
    link(rel='stylesheet' href='/stylesheets/tapesdisplay.css')
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet")
    script(src='/javascripts/tape.js')
    title MixTape #{title}
  body
    nav(class='navigation-bar')
      h1(style="font-family: 'Dancing Script', cursive") MIXTAPE
      div(class='home-playlist-bar')
      if locals.authenticated
        div(class='nav-btn')
          a(href='/home' class='home') HOME
          a(href=`/users/${user.id}/tapes` class='playlist') PLAYLIST
        div(class='info-btn')
          span(class='login-status') Welcome #{user.username}!
          form(class='logout-form' action='/logout' method='post')
            button(class='logout-btn' type='submit') Logout
      else
        span(class='logout-status')
          a(class='active-btn btn-left' href='/') Login
          a(class='active-btn btn-right' href='/register') Register
    div(class='container')
      h2(class='information') #{title}
      block content
