extends layout.pug

include utils.pug

block content
    div(class='container')
        div(class='heading-section')
            h2 Find Music and Save Music
        div(class='row')
            div(class='col-md-6')
                div(class='item')
                    img(src='https://upload.wikimedia.org/wikipedia/en/e/e3/Alice_Merton_No_Roots.jpg')
            div(class='col-md-6')
                div(class='song-detail')
                    div(class='song-info')
                        div(class='song-name') #{song.name}
                        div(class='rating')
                            div(class='rate')
                                label(for='star5') 5 stars
                                input(type='radio' name='rate' value='5' checked)
                                label(for='star4') 4 stars
                                input(type='radio' name='rate' value='4' checked)
                                label(for='star3') 3 stars
                                input(type='radio' name='rate' value='3' checked)
                                label(for='star2') 2 stars
                                input(type='radio' name='rate' value='2' checked)
                                label(for='star1') 1 stars
                                input(type='radio' name='rate' value='1' checked)
                        div(class='artistname')
                            p #{song.artistName}
                p Album: #{song.albumName}
                p Release Date: #{song.releaseDate}
                p Listen Count: #{song.listenCount}
                div(class='playlist-btn')
                    form(action="#" class='display-flex')
                        label(for='add') Add to Playlist
                        select(name='playlist-dropdown')
                            option(value='Listened' id=`${song.id}`) Listened
                            option(value='Interested' id=`${song.id}`) Interested
                            option add a new playlist
                        //- button(type='submit' class='playlist') Add to Playlist
                div(class='play-btn')
                    iframe(width="1000" height="500" src="https://www.youtube.com/embed/QDYDRA5JPLE" frameborder="0" allowfullscreen)
