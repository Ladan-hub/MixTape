doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    link(rel='stylesheet' href='/stylesheets/layout-nav.css')
    link(rel='stylesheet' href='/stylesheets/register.css')
    title MixTape - #{title}
  body
    nav(class='navigation-bar')
      img(src='/images/mixtapelogo.jpeg' alt='Mixtape-logo')
      div(class='home-playlist-bar')
      if locals.authenticated
        div(class='nav-btn')
          a(href='/home' buttonclass='home') HOME
          a(href='/users/:id/playlist' class='playlist') PLAYLIST
        div(class='info-btn')
          span(class='login-status') Welcome #{user.username}!
          form(class='logout-form' action='/logout' method='post')
            button(class='logout-btn' type='submit') Logout
      else
        span(class='logout-status')
          a(class='active-btn btn-left' href='/login') Login
          a(class='active-btn btn-right' href='/register') Register
    div(class='container')
      h2(class='information') #{title}
      block content
    script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js' integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n' crossorigin='anonymous') script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js' integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo' crossorigin='anonymous') script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js' integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6' crossorigin='anonymous')
